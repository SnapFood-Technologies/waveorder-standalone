# ===========================================
# WaveOrder Environment Configuration
# ===========================================

# Database
DATABASE_URL="mongodb://localhost:27017/waveorder"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# Stripe Payment Processing
# ===========================================

# Core Stripe Keys (from Stripe Dashboard → Developers → API Keys)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Webhook Secret (from Stripe Dashboard → Developers → Webhooks)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# -------------------------------------------
# Stripe Price IDs - Paid Plans
# Create these products in Stripe Dashboard → Products
# -------------------------------------------

# Starter Plan - $19/month, $192/year ($16/mo with 17% discount)
STRIPE_STARTER_PRICE_ID="price_starter_monthly_id"
STRIPE_STARTER_ANNUAL_PRICE_ID="price_starter_annual_id"

# Pro Plan - $39/month, $384/year ($32/mo with 17% discount)
STRIPE_PRO_PRICE_ID="price_pro_monthly_id"
STRIPE_PRO_ANNUAL_PRICE_ID="price_pro_annual_id"

# Business Plan - $79/month, $792/year ($66/mo with 17% discount)
STRIPE_BUSINESS_PRICE_ID="price_business_monthly_id"
STRIPE_BUSINESS_ANNUAL_PRICE_ID="price_business_annual_id"

# -------------------------------------------
# Stripe Price IDs - Free Plans (for SuperAdmin)
# Create $0 price products for admin-created businesses
# -------------------------------------------
STRIPE_STARTER_FREE_PRICE_ID="price_starter_free_id"
STRIPE_PRO_FREE_PRICE_ID="price_pro_free_id"
STRIPE_BUSINESS_FREE_PRICE_ID="price_business_free_id"

# ===========================================
# Email Service
# ===========================================
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@waveorder.app"

# ===========================================
# Google Maps
# ===========================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================================
# CRON Jobs
# ===========================================
CRON_SECRET="your-cron-secret"

# ===========================================
# Spam Protection
# ===========================================
AKISMET_API_KEY="your-akismet-api-key"

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_CLARITY_ID="your-clarity-project-id"

# ===========================================
# Supabase Storage (Optional)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ===========================================
# Contact & Support Emails
# ===========================================
CONTACT_EMAIL="contact@waveorder.app"
SUPPORT_EMAIL="support@waveorder.app"
LEGAL_EMAIL="legal@waveorder.app"
PRIVACY_EMAIL="privacy@waveorder.app"

# ===========================================
# API Documentation
# ===========================================
API_DOCS_PASSWORD="yourpassword"

# ===========================================
# Future Implementation (Not Required)
# ===========================================

# Payment Gateways
PAYPAL_CLIENT_ID="your-paypal-client-id"
BKT_API_KEY="your-bkt-api-key"

# WhatsApp Business API
WHATSAPP_API_URL="https://api.whatsapp.com"
